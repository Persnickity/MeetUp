<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wdb32.meetup"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.wdb32.meetup.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wdb32.meetup.CreateEventInfo"
            android:label="@string/title_activity_create_event_info"
            android:parentActivityName="com.wdb32.meetup.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wdb32.meetup.MainActivity" />
        </activity>
        <activity
            android:name="com.wdb32.meetup.EditEventInfo"
            android:label="@string/title_activity_edit_event_info" >
        </activity>
        <activity
            android:name="com.wdb32.meetup.AddToGroup"
            android:label="@string/title_activity_add_to_group"
            android:parentActivityName="com.wdb32.meetup.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wdb32.meetup.MainActivity" />
        </activity>
    </application>

</manifest>
